<div id="task_card" class="max-w-md p-6 bg-white border border-gray-200 rounded-lg shadow-sm">
  <div class="flex items-center justify-between mb-4">
    <h5 class="text-xl font-bold tracking-tight text-gray-900">
      <%= task.title %>
    </h5>
    <% if task.completed? %>
      <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded-sm">
        Concluída
      </span>
    <% else %>
      <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded-sm">
        Pendente
      </span>
    <% end %>
  </div>

  <div class="space-y-3 mb-6">
    <div class="flex items-center text-gray-600">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
      </svg>
      <span class="text-sm">
        <strong>Usuário:</strong>
        <%= task.external_user_name.presence || "Não sincronizado" %>
      </span>
    </div>

    <div class="flex items-center text-gray-600">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
      </svg>
      <span class="text-sm">
        <strong>Empresa:</strong>
        <%= task.external_company.presence || "Não sincronizado" %>
      </span>
    </div>

    <div class="flex items-center text-gray-600">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
      </svg>
      <span class="text-sm">
        <strong>Cidade:</strong>
        <%= task.external_city.presence || "Não sincronizado" %>
      </span>
    </div>
  </div>

  <%= render SyncButtonComponent.new(task: task) %>
</div>
